#
# Install git
#

if [ -x "$(command -v pacman)" ]; then
sudo pacman -S --needed --noconfirm git
else
sudo apt install git -y
fi

#
# Clone cathook
#

git clone --depth 1 --shallow-submodules --recurse-submodules https://github.com/nullworks/cathook.git;cd cathook

#
# Run cathook's install all script
#

./install-all
