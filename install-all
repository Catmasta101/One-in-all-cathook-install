#
# Install git
#

if [ -x "$(command -v pacman)" ]; then
sudo pacman -S --needed --noconfirm git
elif [ -x "$(command -v apt)" ]; then
sudo apt install git -y
fi

#
# Clone cathook
#

git clone --depth 1 https://github.com/nullworks/cathook.git

#
# Run cathook's install all script
#

pushd cathook
. ./install-all
popd
